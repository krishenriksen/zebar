{
  "$schema": "https://github.com/glzr-io/zebar/raw/v2.7.0/resources/widget-schema.json",
  "htmlPath": "./index.html",
  "zOrder": "top_most",
  "shownInTaskbar": false,
  "focused": false,
  "resizable": false,
  "transparent": false,
  "caching": {
    "defaultDuration": 604800,
    "rules": []
  },
  "privileges": {
    "shellCommands": [
      {
        "program": "powershell",
        "argsRegex": ".*"
      }
    ]
  },
  "presets": [
    {
      "name": "default",
      "anchor": "top_left",
      "offsetX": "0px",
      "offsetY": "0px",
      "width": "100%",
      "height": "28px",
      "monitorSelection": {
        "type": "all"
      },
      "dockToEdge": {
        "enabled": true,
        "edge": "top",
        "windowMargin": "0px"
      }
    }
  ]
}
